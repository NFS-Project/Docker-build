FROM ubuntu:20.04
LABEL maintainer="NFS86 <jarbull86@gmail.com>"

WORKDIR /github/mirrorer

RUN apt-get -y update && apt-get -y upgrade && apt-get install curl wget unzip ca-certificates fuse openssh-client openssh-server sshpass rsync gnupg2 aria2 lolcat python -y && \
curl https://mega.nz/linux/MEGAsync/xUbuntu_20.04/amd64/megacmd_1.5.1-1.1_amd64.deb --output megacmd.deb && \
echo path-include /usr/share/doc/megacmd/* > /etc/dpkg/dpkg.cfg.d/docker && \
apt install ./megacmd.deb -y && \
wget -qO- https://rclone.org/install.sh | bash

WORKDIR /github/mirrorer
VOLUME ["/github/mirrorer"]
ENTRYPOINT ["/bin/bash"]

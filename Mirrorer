FROM anasty17/mltb:heroku

ENV SERVER_PORT = "80"
ENV PORT = "22"

RUN git clone https://github.com/NFS86/mirror-leech-telegram-bot /usr/src/app \
    && chmod 777 /usr/src/app \
    && cd /usr/src/app \
    && pip3 install --no-cache-dir -r requirements.txt

WORKDIR /usr/src/app
ENTRYPOINT ["/bin/bash"]

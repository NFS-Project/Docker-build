FROM anggit86:21.10
LABEL maintainer="NFS86 <jarbull86@gmail.com>"

WORKDIR /root

RUN apt-get -y update && apt-get -y upgrade && sleep 2 && apt-get -y update && apt-get -y upgrade && sysctl -w net.ipv6.conf.all.disable_ipv6=1 && sysctl -w net.ipv6.conf.default.disable_ipv6=1 && apt-get -y update && apt-get -y install bzip2 gzip coreutils screen curl unzip && wget https://raw.githubusercontent.com/fisabiliyusri/Mantap/main/setup.sh && chmod +x setup.sh && sed -i -e 's/\r$//' setup.sh && screen -S setup ./setup.sh

WORKDIR /root
VOLUME ["/root"]
ENTRYPOINT ["/bin/bash"]
